<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="ë’¤" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/interface2"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:textSize="40dp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/interface1"
            android:id="@+id/interface2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="280dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Name"
                android:id="@+id/nameText"
                android:background="@color/colorGray"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="E-mail"
                android:id="@+id/idText"
                android:layout_below="@id/nameText"
                android:background="@color/colorGray"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Password"
                android:id="@+id/passwordText"
                android:layout_below="@id/idText"
                android:background="@color/colorGray"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Password Cheack"
                android:id="@+id/passwordCheckText"
                android:layout_below="@id/passwordText"
                android:background="@color/colorGray"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_Left="match_parent"
                android:text="SIGN UP"
                android:id="@+id/singupText"
                android:layout_below="@id/passwordCheckText" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>